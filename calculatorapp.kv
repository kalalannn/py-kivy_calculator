#:kivy 1.8.0

<MenuWidget@BoxLayout>:
	orientation: 'horizontal'
	Button:
		text: 'Menu1'
	Button:
		text: 'Menu2'
	Button:
		text: 'Menu3'

<OurLabel@Label>:
	size: self.texture_size
	text_size: self.size
	padding: (20, 0)
	halign: 'right'
	valign: 'middle'

MyWidget:
	orientation: 'vertical'
	padding: (5, 5, 5, 5)
	display: '0'
	MenuWidget:
		id: menu
		size_hint: (1, 0.1)
	OurLabel:
		id: io
		text: root.display
		font_size: '30sp'
		size_hint: (1, 0.1)
	BoxLayout:
		orientation: 'horizontal'
		size_hint: (1, 0.6)
		GridLayout:
			id: buttons
			rows: 5
			cols: 4
			#'C', '/', "x\u00b3".format(), '<-',
			#        '7', '8', '9', '*',
			#        '4', '5', '6', '-',
			#        '1', '2', '3', '+',
			#        '0', '.', '+/-', '=',
			Button:
				text: 'C'
				on_press: root.clear_display()
			Button:
				text: '/'
				on_press: root.operation(self.text)
			Button:
				text: "x\u00b3"
				on_press: root.operation('sqrt')
			Button:
				text: '<-'
				on_press: root.clear_symbol()
			Button:
				text: '7'
				on_press: root.number(self.text)
			Button:
				text: '8'
				on_press: root.number(self.text)
			Button:
				text: '9'
				on_press: root.number(self.text)
			Button:
				text: '*'
				on_press: root.operation(self.text)
			Button:
				text: '4'
				on_press: root.number(self.text)
			Button:
				text: '5'
				on_press: root.number(self.text)
			Button:
				text: '6'
				on_press: root.number(self.text)
			Button:
				text: '-'
				on_press: root.operation(self.text)
			Button:
				text: '1'
				on_press: root.number(self.text)
			Button:
				text: '2'
				on_press: root.number(self.text)
			Button:
				text: '3'
				on_press: root.number(self.text)
			Button:
				text: '+'
				on_press: root.operation(self.text)
			Button:
				text: '0'
				on_press: root.number(self.text)
			Button:
				text: '.'
				on_press: root.operation(self.text)
			Button:
				text: "+/-"
				on_press: root.negate()
			Button:
				text: '='
				on_press: root.send()
		BoxLayout:
			orientation: 'horizontal'
			canvas:
				Color: 
					rgb: 1, 0, 0
				Rectangle:
					size: self.size
					pos: self.pos
			Labels:
				size_hint: (.9, 1)
			Slider:
				orientation: 'vertical'
				size_hint: (.1, 1)


<Labels@BoxLayout>:
	orientation: 'vertical'
	OurLabel:
		text: 'History'
	OurLabel:
		text: 'first'
	OurLabel:
		text: 'first'
	OurLabel:
		text: 'first'
	OurLabel:
		text: 'first'
	OurLabel:
		text: 'first'
	OurLabel:
		text: 'first'
	OurLabel:
		text: 'first'


